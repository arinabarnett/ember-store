{{!-- Navigation  --}}

<nav class="navbar navbar-expand-md navbar-light bg-light">
  <a class="navbar-brand" href="/cart">Shopping Cart</a>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/">Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/orders">Orders</a>
      </li>
    </ul>
  </div>
  <Cart />
</nav>

{{!-- Products in cart --}}

<div class="container cart-container">
  <div class="row cart-row">
    <div class="col-md-8 cart-col">
      <ul>
        {{#each @model as |product| }}
        <Product-Incart @product={{product}} />
        {{else}}
        <p class="no-items">There are no items in your cart! Please add some!<br>
        Click on the icon below to start shopping</p>
        <a href="/"><img class="add-products-img" src="https://img.icons8.com/bubbles/100/000000/shop--v2.png"></a>
        {{/each}}
      </ul>
    </div>

    {{!-- Order form --}}

    <div class="input-form col-md-4 cart-col">
      <div class="total">Total: {{this.total}}$
      </div>
      <div class="alert alert-primary" role="alert">
        Please fill in the form below to complete your order
      </div>
      <form onsubmit={{action "createOrder"}}>
        <div class="form-group">
          <label for="name">Name</label>
          {{input type="text" class="form-control" value=name id="name" required=true}}
        </div>
        <div class="form-group">
          <label for="phonenumber">Phonenumber</label>
          {{input type="tel" class="form-control" value=phonenumber id="phonenumber" required=true}}
        </div>
        <div class="form-group">
          <label for="address">Delivery Address</label>
          {{input type="text" class="form-control" value=address id="address" required=true}}
        </div>
        <button type="submit" class="btn btn-primary cart-btn">Create order
          {{#ember-tooltip event="click" }}
          Your order was successfully created!
          {{/ember-tooltip}}
        </button>
      </form>
    </div>
  </div>
</div>